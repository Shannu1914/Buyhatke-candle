<!-- Featured Products Section -->
<section class="featured-products container">
  <h2 class="section-title">âœ¨ Featured Candles</h2>

  <% const categories = ['Featured', 'Best Sellers', 'New Arrivals']; %>

<% categories.forEach((category, idx) => { %>
  <h3 class="category-title"><%= category %></h3>
  <div class="product-row-wrapper">
    <button class="slide-btn left" onclick="slideLeft(<%= idx %>)">â—€</button>
    <div class="product-row" id="row-<%= idx %>">
      <% products.filter(p => p.category === category).slice(0,10).forEach(product => { %>
        <div class="product-card">
          <div class="product-img">
            <% if (product.image) { %>
              <img src="/uploads/products/<%= product.image %>" alt="<%= product.name %>"/>
            <% } else { %>
              <img src="/images/default-product.png" alt="No Image"/>
            <% } %>
          </div>
          <div class="product-info">
            <h3><%= product.name %></h3>
            <p class="price">â‚¹<%= product.price %></p>
            <a href="/products/<%= product._id %>" class="btn btn-secondary">View</a>
          </div>
        </div>
      <% }) %>
    </div>
    <button class="slide-btn right" onclick="slideRight(<%= idx %>)">â–¶</button>
  </div>
<% }) %>

</section>

