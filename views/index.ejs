<%- include('partials/header', { title: 'Home', active: 'home' }) %>

<%- include('partials/seo', {
  title: 'Buyhatke - Premium Candles',
  description: 'Shop handcrafted candles for every mood and occasion.',
  keywords: 'candles, scented candles, premium candles, Buyhatke',
  path: '/'
}) %>

<section class="hero-section modern-hero" style="background-image: url('/images/hero-candles.jpg');">
  <div class="container hero-content">
    <div class="hero-left">
      <h1 class="hero-title">Illuminate Your World with Buyhatke Candles</h1>
      <p class="hero-subtitle">Premium, handcrafted candles for every mood and occasion.</p>
      <a href="/shop" class="btn btn-primary">Shop Now</a>
    </div>
    <div class="hero-right">
      <img src="/images/hero-candle-illustration.png" alt="Candles" />
    </div>
  </div>
</section>

<section class="featured-products container">
  <h2>Featured Candles</h2>
  <div class="product-grid">
    <% if (products && products.length > 0) { %>
      <% products.slice(0,6).forEach(product => { %>
        <div class="product-card">
          <img src="/uploads/products/<%= product.image %>" alt="<%= product.name %>" />
          <h3><%= product.name %></h3>
          <p>â‚¹<%= product.price %></p>
          <a href="/shop/<%= product._id %>" class="btn btn-secondary">View</a>
        </div>
      <% }) %>
    <% } else { %>
      <p>No products available.</p>
    <% } %>
  </div>
</section>

<section class="cta-section">
  <div class="container">
    <h2>Start Shopping Today</h2>
    <p>Handcrafted candles delivered to your doorstep.</p>
    <a href="/shop" class="btn btn-primary">Shop All Candles</a>
  </div>
</section>

<%- include('partials/footer') %>
