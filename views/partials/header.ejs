<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Buyhatke Candles | Handcrafted Candles</title>
  <meta name="description" content="Shop premium handcrafted candles at Buyhatke. Perfect gifts, soothing aromas, and beautiful designs.">
  <meta name="keywords" content="candles, handmade candles, aroma candles, luxury candles, Buyhatke">
  <meta name="author" content="Buyhatke Candles">
  <meta name="robots" content="index, follow">

  <!-- Open Graph for social sharing -->
  <meta property="og:title" content="Buyhatke Candles" />
  <meta property="og:description" content="Discover handcrafted candles with soothing aromas at Buyhatke." />
  <meta property="og:image" content="/images/logo.png" />
  <meta property="og:url" content="https://buyhatke-candles.onrender.com" />
  <meta name="twitter:card" content="summary_large_image" />

  <link rel="icon" href="/images/logo.png" />
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <div class="page-wrapper">
    <header>
      <nav class="navbar">
        <div class="logo">
          <a href="/"><img src="/images/logo.png" alt="Buyhatke Logo" /><span class="company-name">Buyhatke</span></a>
        </div>

        <button class="menu-toggle" id="menuToggle">&#9776;</button>

        <ul class="nav-links">
          <!-- Always show Home & Products -->
          <li><a href="/" class="<%= active === 'home' ? 'active' : '' %>">Home</a></li>
          <li><a href="/products" class="<%= active === 'products' ? 'active' : '' %>">Shop</a></li>

          <% if (!user || user.role !== 'admin') { %>
            <!-- Show only for normal users -->
            <li><a href="/about" class="<%= active === 'about' ? 'active' : '' %>">About</a></li>
            <li><a href="/contact" class="<%= active === 'contact' ? 'active' : '' %>">Contact</a></li>

            <% if (typeof cart !== "undefined" && cart.length > 0) { %>
              <li><a href="/checkout" class="<%= active === 'checkout' ? 'active' : '' %>">Checkout</a></li>
            <% } %>
            <li><a href="/cart" class="<%= active === 'cart' ? 'active' : '' %>">Cart</a></li>
          <% } %>

          <% if (user) { %>
            <% if (user.role === 'admin') { %>
              <!-- Admin-only links -->
              <li><a href="/admin/dashboard" class="<%= active === 'admin' ? 'active' : '' %>">Admin Dashboard</a></li>
              <li><a href="/admin/products" class="<%= active === 'manageProducts' ? 'active' : '' %>">Manage Products</a></li>
            <% } else { %>
              <!-- Normal user dashboard -->
              <li><a href="/user/dashboard" class="<%= active === 'user' ? 'active' : '' %>">My Account</a></li>
            <% } %>
            <li><a href="/logout">Logout</a></li>
          <% } else { %>
            <!-- Guest -->
            <li><a href="/login" class="<%= active === 'login' ? 'active' : '' %>">Login</a></li>
            <li><a href="/register" class="<%= active === 'register' ? 'active' : '' %>">Register</a></li>
          <% } %>
        </ul>


      </nav>
    </header>

    <main>
      <% if(success_msg && success_msg.length > 0) { %>
        <div class="alert success"><%= success_msg[0] %></div>
      <% } %>

      <% if(error_msg && error_msg.length > 0) { %>
        <div class="alert error"><%= error_msg[0] %></div>
      <% } %>
