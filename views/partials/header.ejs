<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Google Site Verification -->
  <meta name="google-site-verification" content="YSg3YzmfxUHQH3wx2xoJoIqvDVcWzaTJc9TUtKzaRQY" />

  <title>Buy Hatke Candles | Handcrafted Candles</title>
  <meta name="description" content="Shop premium handcrafted candles at Buy Hatke. Perfect gifts, soothing aromas, and beautiful designs.">
  <meta name="keywords" content="candles, handmade candles, aroma candles, luxury candles, Buy Hatke">
  <meta name="author" content="Buy Hatke Candles">
  <meta name="robots" content="index, follow">

  <!-- Open Graph for social sharing -->
  <meta property="og:title" content="Buy Hatke Candles" />
  <meta property="og:description" content="Discover handcrafted candles with soothing aromas at Buy Hatke." />
  <meta property="og:image" content="/images/logo.png" />
  <meta property="og:url" content="https://Buy Hatke-candles.onrender.com" />
  <meta name="twitter:card" content="summary_large_image" />

  <link rel="icon" href="/images/logo.png" />
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <div class="page-wrapper">
    <header>
  <nav class="navbar">
    <!-- Left: Logo -->
    <div class="logo">
      <a href="/">
        <img src="/images/logo.png" alt="Buy Hatke Logo" />
        <span class="company-name">Buy Hatke</span>
      </a>
    </div>

    <!-- Center: Navigation -->
    <ul class="nav-links" id="navLinks">
      <li><a href="/" class="<%= typeof active !== 'undefined' && active === 'home' ? 'active' : '' %>">Home</a></li>
      <li><a href="/products" class="<%= typeof active !== 'undefined' && active === 'products' ? 'active' : '' %>">Shop</a></li>

      <% if (!user || (user && !user.isAdmin)) { %>
        <li><a href="/about" class="<%= active === 'about' ? 'active' : '' %>">About</a></li>
        <li><a href="/contact" class="<%= active === 'contact' ? 'active' : '' %>">Contact</a></li>
        <li><a href="/cart" class="<%= active === 'cart' ? 'active' : '' %>">Cart</a></li>
        <% if (typeof cart !== "undefined" && cart.length > 0) { %>
          <li><a href="/checkout" class="<%= active === 'checkout' ? 'active' : '' %>">Checkout</a></li>
        <% } %>
      <% } %>
    </ul>

    <!-- Right: Auth / Dashboard -->
    <div class="auth-links">
      <% if (user) { %>
        <% if (user.isAdmin) { %>
          <a href="/admin" class="<%= active === 'admin' ? 'active' : '' %>">Admin Dashboard</a>
          <a href="/admin/products" class="<%= active === 'manageProducts' ? 'active' : '' %>">Manage Products</a>
        <% } else { %>
          <a href="/user/dashboard" class="<%= active === 'user' ? 'active' : '' %>">My Account</a>
        <% } %>
        <a href="/logout" class="btn btn-primary">Logout</a>
      <% } else { %>
        <a href="/login" class="btn btn-primary">Login</a>
        <a href="/register" class="btn btn-primary">Register</a>
      <% } %>
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="menu-toggle" id="menuToggle">
      <i class="fas fa-bars"></i> <!-- Hamburger icon -->
    </button>
  </nav>
</header>

<script>
  const menuToggle = document.getElementById('menuToggle');
  const navLinks = document.getElementById('navLinks');
  
  //TOGGLE MOBILE MENU
  menuToggle.addEventListener('click', () => {
    navLinks.classList.toggle('show');
  });

  //CLOSE MENU WHEN CLICKING ANY LINK
  document.querySelectorAll('#navLinks a').forEach(link => {
    link.addEventListener('click', () => {
      navLinks.classList.remove('show'); // closes menu after clicking
    });
  });

</script>

