<footer class="footer">
  <div class="footer-container">

    <!-- Column 1: Logo + Brand -->
    <div class="footer-column">
      <div class="brand">
        <img src="/images/logo.png" alt="Buyhatke Logo" class="brand-logo">
        <h2 class="brand-title">Buyhatke</h2>
      </div>
      <p class="brand-text">
        Premium handmade candles to light up your moments. Shop online and enjoy fast delivery.
      </p>
    </div>

    <!-- Column 2: Quick Links -->
    <div class="footer-column">
      <h2 class="footer-title">Quick Links</h2>
      <ul class="footer-links">
        <% if (!user) { %>
          <!-- Guest links -->
          <li><a href="/" class="footer-link">Home</a></li>
          <li><a href="/products" class="footer-link">Shop</a></li>
          <li><a href="/about" class="footer-link">About</a></li>
          <li><a href="/contact" class="footer-link">Contact</a></li>
        <% } else if (user.role === 'user') { %>
          <!-- Logged-in user links -->
          <li><a href="/products" class="footer-link">Shop</a></li>
          <li><a href="/cart" class="footer-link">My Cart</a></li>
          <li><a href="/orders" class="footer-link">My Orders</a></li>
          <li><a href="/profile" class="footer-link">Profile</a></li>
        <% } else if (user.role === 'admin') { %>
          <!-- Admin links -->
          <li><a href="/admin" class="footer-link">Dashboard</a></li>
          <li><a href="/admin/products" class="footer-link">Manage Products</a></li>
          <li><a href="/admin/orders" class="footer-link">Manage Orders</a></li>
          <li><a href="/admin/users" class="footer-link">Manage Users</a></li>
        <% } %>
      </ul>
    </div>

    <!-- Column 3: Social Media -->
    <div class="footer-column">
      <h2 class="footer-title">Follow Us</h2>
      <div class="social-icons">
        <a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
        <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook"></i></a>
        <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a>
      </div>
    </div>

  </div>

  <!-- Bottom Line -->
  <div class="footer-bottom">
    Â© <%= new Date().getFullYear() %> Buyhatke. All rights reserved.
  </div>
</footer>
