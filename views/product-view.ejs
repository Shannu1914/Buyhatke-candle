<%- include('partials/header', { title: product.name }) %>

<section class="product-view container">
  <div class="product-detail">

    <!-- Product Image -->
    <div class="product-image">
      <% if (product.image) { %>
        <img src="/uploads/products/<%= product.image %>" alt="<%= product.name %>">
      <% } else { %>
        <img src="/images/default-product.png" alt="No Image">
      <% } %>
    </div>

    <!-- Product Info -->
    <div class="product-info">
      <h1 class="product-title"><%= product.name %></h1>
      <p class="product-price">â‚¹<%= product.price %></p>
      <p class="product-description"><%= product.description %></p>

      <form method="POST" action="/cart/add/<%= product._id %>" class="add-to-cart-form">
        <div class="quantity-group">
          <label for="quantity">Quantity:</label>
          <input type="number" name="quantity" id="quantity" value="1" min="1">
        </div>

        <div class="action-buttons">
          <button type="submit" class="btn btn-primary">ðŸ›’ Add to Cart</button>
          <a href="/payment/checkout/<%= product._id %>" class="btn btn-buy">âš¡ Buy Now</a>
        </div>
      </form>

      <a href="/products" class="btn btn-secondary back-btn">â¬… Back to Shop</a>
    </div>

  </div>
</section>

<%- include('partials/footer') %>
